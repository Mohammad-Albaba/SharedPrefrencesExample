<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

   <PreferenceCategory android:title="@string/ui_settings">

       <EditTextPreference
           android:id="@+id/font_size"
           android:title="@string/font_size"
           android:key="@string/key_font_size"
           android:summary="@string/font_default_value"
           android:defaultValue="@string/font_default_value"/>
       <SwitchPreference
           android:id="@+id/night_mode"
           android:title="@string/night_mode"
           android:key="@string/key_night_mode"
           android:summary="@string/summary_night_mode"
           android:defaultValue="@bool/night_mode_default"/>

   </PreferenceCategory>

</PreferenceScreen>